{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "exclude": [
    "./jest.config.js",
    "./jest.setup.js",
    "./.eslintrc.js",
    "./.prettierrc.js",
    "./babel.config.js",
    "./metro.config.js"
  ],
  "compilerOptions": {
    "strict": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@screens/*": ["src/screens/*"]
    }
  }
}
